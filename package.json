{
  "name": "voorhoede-dragonfly",
  "version": "1.0.0",
  "description": "Website for De Voorhoede",
  "author": "De Voorhoede (https://www.voorhoede.nl)",
  "homepage": "https://github.com/voorhoede/voorhoede-dragonfly#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/voorhoede/voorhoede-dragonfly"
  },
  "engines": {
    "node": ">=10.8.0",
    "npm": ">=6.2.0"
  },
  "private": true,
  "scripts": {
    "analyze": "nuxt build --analyze",
    "prebuild": "run-s prebuild:clean prebuild:predump prebuild:dump",
    "prebuild:clean": "rimraf src/client/static/data src/client/static/_redirects",
    "prebuild:predump": "dato dump",
    "prebuild:dump": "npm run data",
    "build": "NODE_ENV=production run-s build:*",
    "build:client": "nuxt generate --modern=client --fail-on-error",
    "postbuild": "node _scripts/build-feed/index.js",
    "predev": "run-s prebuild:clean prebuild:predump",
    "dev": "PORT=3278 nuxt",
    "data": "node _scripts/data-dump/index.js",
    "lint": "run-s lint:*",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:css": "stylelint 'src/client/**/*.{vue,css}'",
    "lintfix": "run-s lintfix:*",
    "lintfix:js": "npm run lint:js -- --fix",
    "lintfix:css": "npm run lint:css -- --fix",
    "precommit": "npm run lint",
    "start": "nuxt start",
    "test": "ava -v",
    "test:watch": "ava -vw"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/svg-sprite": "^0.4.12",
    "@voorhoede/vue-lazy-load": "^1.2.9",
    "@vue-a11y/announcer": "^2.1.0",
    "dayjs": "^1.8.36",
    "dotenv-safe": "^8.2.0",
    "nuxt": "^2.14.6",
    "nuxt-i18n": "^6.15.1",
    "prismjs": "^1.21.0",
    "svg4everybody": "^2.1.9",
    "unfetch": "^4.1.0"
  },
  "devDependencies": {
    "@nuxtjs/sitemap": "^2.4.0",
    "autoprefixer": "^9.8.6",
    "ava": "^3.12.1",
    "babel-eslint": "^10.1.0",
    "backoff": "^2.5.0",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.2",
    "datocms-client": "^0.8.15",
    "eslint": "^6.8.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^6.2.2",
    "eslint-plugin-vuejs-accessibility": "^0.6.1",
    "glob": "^7.1.4",
    "husky": "0.14.3",
    "iso-639-1": "^2.1.4",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "npm-run-all": "4.1.5",
    "postcss-calc": "^7.0.4",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "promise-polyfill": "^8.1.0",
    "proxyquire": "^2.1.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "stylelint": "^13.7.1",
    "stylelint-config-standard": "^20.0.0",
    "xmlbuilder": "^15.1.1"
  },
  "browserslist": [
    "ie 11",
    "last 2 versions"
  ],
  "ava": {
    "babel": false,
    "compileEnhancements": false
  }
}
